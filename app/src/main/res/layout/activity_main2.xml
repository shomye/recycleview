<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:textSize="20dp"
        android:text="Mine"
        android:textColor="@color/white"
        android:background="@drawable/home_bg"
        android:gravity="center"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:id="@+id/linearLayout"
        android:layout_below="@+id/text1"
        android:background="@drawable/home_bg">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
           android:layout_marginLeft="40dp"
            android:layout_marginTop="29dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/user"
           />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/imageView">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="18dp"
                android:text="Hello! "
                android:id="@+id/t2"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/mingcheng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Please login/register"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/t2"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mingcheng"
                android:layout_marginTop="8dp"
                android:textSize="18dp"
                android:text="Thank you for using"
                android:id="@+id/t3"
                android:textColor="@color/white" />
        </RelativeLayout>

    </RelativeLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/gerenziliao"
       android:layout_marginTop="30dp"
       android:layout_marginLeft="8dp"
       android:layout_marginRight="8dp"
       android:layout_below="@+id/linearLayout">
       <TextView
           android:id="@+id/gerenziliao_texxt"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_weight="1"

           android:text="Personal information"
           android:textSize="18dp"
           android:textColor="@color/black"/>
       <ImageView
           android:layout_width="20dp"
           android:layout_height="20dp"
           android:background="@drawable/jiantou"
           android:layout_marginRight="8dp"
           android:id="@+id/gerenziliao_jiantou"
           android:layout_alignParentRight="true"
           />
   </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/jingdiandingdan"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_below="@+id/gerenziliao">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Attraction order"
            android:layout_weight="1"
            android:id="@+id/jingdiandingdan_text"
            android:layout_below="@id/gerenziliao"
            android:textColor="@color/black"
            android:textSize="18dp"
         />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/jiantou"
            android:layout_marginRight="8dp"
            android:layout_below="@+id/gerenziliao"

            android:id="@+id/jingdiandingdan_jiantou"
            android:layout_alignParentRight="true"
            />
    </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/jiudiandingdan"
           android:layout_marginTop="30dp"
           android:layout_marginLeft="8dp"
           android:layout_marginRight="8dp"
           android:layout_below="@+id/jingdiandingdan">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Hotel order"
               android:id="@+id/jiudiandingdan_text"
               android:layout_below="@id/jingdiandingdan"
               android:textColor="@color/black"
               android:textSize="18dp"
               android:layout_weight="1"
            />
           <ImageView
               android:layout_width="20dp"
               android:layout_height="20dp"
               android:layout_below="@id/jingdiandingdan"
               android:background="@drawable/jiantou"
               android:layout_marginRight="8dp"

               android:id="@+id/jiudiandingdan_jiantou"
               android:layout_alignParentRight="true"
               />

       </LinearLayout>

    <LinearLayout
        android:id="@+id/tuichu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_below="@+id/jiudiandingdan">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log out "
            android:textSize="18dp"
            android:layout_weight="1"
            android:textColor="@android:color/black"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/jingdiandingdan"
            android:background="@drawable/jiantou"
            android:layout_marginRight="8dp"
            android:layout_alignParentRight="true"
            />

    </LinearLayout>


</RelativeLayout>
